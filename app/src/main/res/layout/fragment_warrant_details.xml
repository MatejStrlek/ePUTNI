<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragment.WarrantDetailsFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/light_gray"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:title="@string/warrant_details" />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_16sp"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_time"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/_8sp"
        android:textSize="@dimen/_16sp" />

    <TextView
        android:id="@+id/tvStartTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_16sp"
        android:textSize="@dimen/_14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/end_time"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/_8sp"
        android:textSize="@dimen/_16sp" />

    <TextView
        android:id="@+id/tvEndTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_16sp"
        android:textSize="@dimen/_14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_city"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/_8sp"
        android:textSize="@dimen/_16sp" />

    <TextView
        android:id="@+id/tvStartCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_16sp"
        android:textSize="@dimen/_14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/end_city"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/_8sp"
        android:textSize="@dimen/_16sp" />

    <TextView
        android:id="@+id/tvEndCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_16sp"
        android:textSize="@dimen/_14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/count_kilometers_onStart"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/_8sp"
        android:textSize="@dimen/_16sp" />

    <TextView
        android:id="@+id/tvStartKilometers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_16sp"
        android:textSize="@dimen/_14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/end_kilometers"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/_8sp"
        android:textSize="@dimen/_16sp" />

    <TextView
        android:id="@+id/tvEndKilometers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_16sp"
        android:textSize="@dimen/_14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/trip_description"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/_8sp"
        android:textSize="@dimen/_16sp" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_16sp"
        android:textSize="@dimen/_14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/file_count"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/_8sp"
        android:textSize="@dimen/_16sp" />

    <TextView
        android:id="@+id/tvFileCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_16sp"
        android:textSize="@dimen/_14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/checked_by_finance_team"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/_8sp"
        android:textSize="@dimen/_16sp" />

    <TextView
        android:id="@+id/tvCheckedByFinanceTeam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_16sp"
        android:textSize="@dimen/_14sp" />

</LinearLayout>

</LinearLayout>